<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/my_container"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottomsheets.BottomSheetBusinessCard">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:background="@drawable/bg_visiting_card"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingBottom="@dimen/margin_24dp"
                android:paddingTop="@dimen/margin_12dp"
                android:background="@drawable/business_card"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNameBusiness"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_18sp"
                        android:textColor="@color/dark_blue_visiting"
                        android:text="Paykredit"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:textSize="@dimen/text_10sp"
                        android:text="Marketing Manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivVisitingCard"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/user_icon"
                    app:civ_border_width="0.5dp"
                    app:civ_border_color="@color/colorPrimary"
                    android:layout_marginRight="@dimen/margin_24dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>


                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical">

                    <LinearLayout

                        android:gravity="end"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView

                            android:layout_width="@dimen/margin_16dp"
                            android:layout_height="11dp"
                            android:layout_gravity="center"
                            android:src="@drawable/user_icon"
                            android:visibility="invisible"/>

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_marginLeft="@dimen/margin_16dp"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/dark_blue_visiting"
                            android:text="PayCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>




                    </LinearLayout>
                    <LinearLayout

                        android:gravity="end"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_marginLeft="@dimen/margin_16dp"
                            android:textSize="@dimen/text_12sp"
                            android:textColor="@color/dark_blue_visiting"
                            android:text="G-25, Shaheenbagh,"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="@dimen/margin_16dp"
                            android:layout_height="11dp"
                            android:layout_gravity="center"
                            android:src="@drawable/location"
                            android:tint="@color/dark_blue_visiting" />


                    </LinearLayout>

                    <LinearLayout


                        android:gravity="end"
                        android:layout_margin="2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tvNUmberBusiness"
                                android:textSize="@dimen/text_10sp"
                                android:textColor="@color/dark_blue_visiting"
                                android:layout_gravity="center"
                                android:text="0123456789"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>



                        <ImageView
                            android:layout_gravity="center"
                            android:padding="0dp"
                            android:layout_marginLeft="5dp"
                            android:tint="@color/dark_blue_visiting"
                            android:src="@drawable/mobile_phone_24dp"
                            android:layout_width="14dp"
                            android:layout_height="14dp"/>




                    </LinearLayout>

                    <LinearLayout

                        android:gravity="end"
                        android:layout_margin="@dimen/margin_2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout

                            android:layout_marginTop="@dimen/margin_2dp"
                            android:layout_marginLeft="@dimen/margin_16dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tvEmailBusiness"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textSize="@dimen/text_10sp"
                                android:textColor="@color/dark_blue_visiting"
                                android:layout_gravity="center"
                                android:text="info@paykredit.com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:padding="@dimen/margin_2dp"
                                android:layout_gravity="center"
                                android:tint="@color/dark_blue_visiting"
                                android:src="@drawable/email"
                                android:layout_marginLeft="5dp"
                                android:layout_width="@dimen/margin_16dp"
                                android:layout_height="@dimen/margin_16dp"/>


                        </LinearLayout>




                    </LinearLayout>

                    <LinearLayout


                        android:gravity="end"
                        android:layout_margin="@dimen/margin_2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:padding="@dimen/margin_2dp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:tint="@color/dark_blue_visiting"
                            android:src="@drawable/profile_icon"
                            android:layout_width="@dimen/margin_16dp"
                            android:layout_height="@dimen/margin_16dp"/>

                        <LinearLayout

                            android:layout_marginTop="@dimen/margin_2dp"
                            android:layout_marginLeft="@dimen/margin_16dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tv_gst_no"
                                android:textSize="@dimen/text_10sp"
                                android:textColor="@color/dark_blue_visiting"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tvShareCard"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_gravity="center"
            android:paddingLeft="56dp"
            android:paddingRight="56dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:paddingBottom="@dimen/margin_8dp"
            android:paddingTop="@dimen/margin_8dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_share_visiting_card_bg"
            android:text="Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>





</FrameLayout>