<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tv_common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/toolbar_background"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        android:visibility="visible"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_8dp"
            android:paddingRight="@dimen/padding_8dp">


            <ImageView

                android:id="@+id/ivBackFullDescription"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/padding_4dp"
                android:src="@drawable/arrow_right"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/ivHamburger"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/padding_4dp"
                android:src="@drawable/hamburger_white_24_dp"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tvToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:layout_toLeftOf="@+id/ivNotification"
                android:layout_toRightOf="@id/ivHamburger"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Paykredit"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/circleProfileHolder"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_user_profile_logo"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/preview"
                    app:civ_border_color="@color/white"
                    app:civ_border_width=".5dp" />

                <FrameLayout
                    android:id="@+id/iv_uploadProfilePicture"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/white_circle">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/camera"
                        android:tint="@color/colorPrimary" />


                </FrameLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circleProfileHolder"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="13sp"
                android:layout_marginTop="38dp"
                android:text="Hi CreatedInAm"
                android:textColor="@color/white" />


            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="@dimen/margin_24dp"
                android:layout_height="@dimen/margin_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_4dp"
                android:padding="@dimen/margin_2dp"
                android:src="@drawable/notification"
                android:tint="@color/white"
                android:visibility="gone" />


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tv_creditBook_actionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        android:visibility="gone"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_8dp"
            android:paddingRight="@dimen/padding_8dp">


            <ImageView

                android:id="@+id/ivBackFullDescriptionS"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/padding_4dp"
                android:src="@drawable/arrow_right"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivHamburgerS"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/padding_4dp"
                android:rotation="-180"
                android:src="@drawable/arrow_right"
                android:tint="@color/white" />


            <TextView
                android:id="@+id/tvToolbarS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_16dp"
                android:layout_toLeftOf="@+id/ivNotificationS"
                android:layout_toRightOf="@id/ivHamburgerS"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Paykredit"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/ivNotificationS"
                android:layout_width="@dimen/margin_24dp"
                android:layout_height="@dimen/margin_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_4dp"
                android:padding="@dimen/margin_2dp"
                android:src="@drawable/notification"
                android:tint="@color/white"
                android:visibility="gone" />


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

</LinearLayout>